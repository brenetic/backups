[
  {
    "name": "documents",
    "enabled": true,
    "locations": ["/home/user/Documents", "/home/user/Desktop"],
    "offsite": true,
    "local": false,
    "retention": { "keepWithin": "1m" },
    "checkWeekly": false
  },
  {
    "name": "photos",
    "enabled": true,
    "locations": ["/home/user/Pictures"],
    "local_destination": "/mnt/external/backups",
    "offsite": true,
    "local": true,
    "retention": { "keepLast": 10, "keepDaily": 7 },
    "checkWeekly": false
  },
  {
    "name": "local_only",
    "enabled": true,
    "locations": ["/home/user/Projects"],
    "local_destination": "/mnt/secondary/projects_backup",
    "offsite": false,
    "local": true,
    "checkWeekly": false
  }
]
